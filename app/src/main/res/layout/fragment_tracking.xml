<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="16dp"
        android:paddingTop="?attr/actionBarSize"
        android:background="@color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:strokeColor="@color/nav_icon_inactive"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtTrackingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedido #0345"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTrackingSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="06/12/2025 20:15"
                        android:textColor="@color/text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Llegada estimada: 20:45"
                        android:textColor="@color/miroti_orange"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEstadoPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/cadete_state_espera"
                app:strokeColor="@color/cadete_state_espera"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imgEstadoIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:tint="@color/white"
                        android:src="@android:drawable/ic_popup_sync" />

                    <TextView
                        android:id="@+id/txtEstadoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Esperando asignación de pedido"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEstadoDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apenas tengas un pedido asignado, verás todos los detalles aquí."
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:id="@+id/lytEstadoAcciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAbrirMaps"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Abrir Maps"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/cadete_state_activo"
                            android:textColor="@color/cadete_text_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLlamarCliente"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Llamar cliente"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/cadete_state_activo"
                            android:textColor="@color/cadete_text_primary" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMarcarEntregado"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Marcar como entregado"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        app:backgroundTint="@color/cadete_state_activo"
                        android:textColor="@color/cadete_text_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:strokeColor="@color/nav_icon_inactive"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_orange" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtCadeteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cadete: Franco Díaz"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCadetePhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tel: 9 112 334 556"
                            android:textColor="@color/text_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtCadeteAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrega: Av. Libertad 1234"
                            android:textColor="@color/text_light"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:strokeColor="@color/nav_icon_inactive"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ver resumen del pedido"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_light" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactarCadete"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONTACTAR CADETE"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/cadete_state_activo"
                    android:textColor="@color/cadete_text_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerDetalles"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VER DETALLES"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/cadete_state_activo"
                    android:textColor="@color/cadete_text_primary" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
