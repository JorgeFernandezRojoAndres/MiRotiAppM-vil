<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restablecer contrase침a"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electr칩nico"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_border_orange"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#d6d6d6"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etNuevaContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva contrase침a"
            android:inputType="textPassword"
            android:background="@drawable/edittext_border_orange"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#d6d6d6"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etRepetirContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir contrase침a"
            android:inputType="textPassword"
            android:background="@drawable/edittext_border_orange"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#d6d6d6"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR"
            android:backgroundTint="#ff6600"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF4444"
            android:gravity="center"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>

