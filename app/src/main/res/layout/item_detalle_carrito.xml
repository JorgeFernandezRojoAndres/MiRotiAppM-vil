<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#1F1F1F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgDetallePlato"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Imagen del plato"
            android:scaleType="centerCrop"
            android:background="@drawable/logo_miroti" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtDetalleNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDetalleCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:tint="@color/white"
                    android:backgroundTint="#2a2a2a"
                    android:contentDescription="Restar" />

                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="8dp" />

                <ImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_next"
                    android:tint="@color/white"
                    android:backgroundTint="#2a2a2a"
                    android:contentDescription="Sumar" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDetallePrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0"
            android:textColor="@color/miroti_orange"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
