<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/cardEntrega"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cadete_state_espera"
        app:cardElevation="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEntregaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedido #12345"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEntregaDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Libertad 1234"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/txtEntregaCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTomarPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="TOMAR PEDIDO"
                    android:textAllCaps="true"
                    app:backgroundTint="@color/miroti_orange"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEntregaEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="@drawable/pedido_estado_badge"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="EN ESPERA"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>
