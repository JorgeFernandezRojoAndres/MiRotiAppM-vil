<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#1F1F1F"
    app:strokeColor="@color/nav_icon_inactive"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgPlato"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Imagen del plato"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/logo_miroti" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombrePlato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Plato"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtDescripcionPlato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n breve del plato o ingredientes principales."
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtPrecioPlato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’²Precio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ff6600" />

            <ImageButton
                android:id="@+id/btnAgregarPlato"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="@drawable/bg_circle_orange"
                android:src="@drawable/ic_shopping_cart_orange"
                android:contentDescription="Agregar al carrito"
                android:tint="@color/white"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
